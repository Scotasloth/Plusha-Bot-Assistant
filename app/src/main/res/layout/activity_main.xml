<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- TextView to show the recognized speech -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_text"
        android:paddingTop="20dp"
        android:textSize="18sp" /> <!-- Increase text size for better visibility -->

    <!-- Button to start the voice recognition, using string resource -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_voice_command"
        android:layout_marginTop="30dp" /> <!-- Added marginTop for better UI -->

    <!-- TextView to show the recognized speech -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C H U N K"
        android:textSize="20sp"
        android:paddingTop="20dp" /> <!-- Increased font size -->

</LinearLayout>